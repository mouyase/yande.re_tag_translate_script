		["pussy","小穴"],
		["bra","胸罩"],
		["sex","性交"],
		["feet","脚"],
		["girls und panzer","少女与战车"],
		["girls und panzer gekijouban","少女与战车剧场版"],
		["ass grab","抓屁股"],
		["censored","骑兵"],
		["cleavage","事业线"],
		["nipples","乳头"],
