	];

    modifyHtml();

    function modifyHtml() {
        console.log('TAG汉化开始');
        for (var i = 0; i < keywords.length; i++) {
            var string = jquery("a:contains(" + keywords[i][0] + ")").map(function() {
                if (jquery(this).text() == keywords[i][0]) {
                    return this;
                }
            });
            string.html(keywords[i][1]+"【"+keywords[i][0]+"】");
        }
        console.log('TAG汉化结束');
    }
})();
